// Получает раздел по полному имени.
// 
// Параметры:
//  ПолноеИмя - Строка - полное имя объекта метаданных.
// 
// Возвращаемое значение:
//  Строка - Раздел.
//
Функция ПолучитьРазделПоПолномуИмени(ПолноеИмя) Экспорт
	
	Если Лев(ПолноеИмя, 9)       = "Константа" Тогда
		Возврат "Константы";
	ИначеЕсли Лев(ПолноеИмя, 10) = "ПланОбмена" Тогда
		Возврат "ПланыОбмена";
	ИначеЕсли Лев(ПолноеИмя, 10) = "Справочник" Тогда
		Возврат "Справочники";
	ИначеЕсли Лев(ПолноеИмя, 8)  = "Документ" Тогда
		Возврат "Документы";
	ИначеЕсли Лев(ПолноеИмя, 12) = "Перечисление" Тогда
		Возврат "Перечисления";
	ИначеЕсли Лев(ПолноеИмя, 22) = "ПланВидовХарактеристик" Тогда
		Возврат "ПланыВидовХарактеристик";
	ИначеЕсли Лев(ПолноеИмя, 10) = "ПланСчетов" Тогда
		Возврат "ПланыСчетов";
	ИначеЕсли Лев(ПолноеИмя, 16) = "ПланВидовРасчета" Тогда
		Возврат "ПланыВидовРасчета";
	ИначеЕсли Лев(ПолноеИмя, 15) = "РегистрСведений" Тогда
		Возврат "РегистрыСведений";
	ИначеЕсли Лев(ПолноеИмя, 17) = "РегистрНакопления" Тогда
		Возврат "РегистрыНакопления";
	ИначеЕсли Лев(ПолноеИмя, 18) = "РегистрБухгалтерии" Тогда
		Возврат "РегистрыБухгалтерии";
	ИначеЕсли Лев(ПолноеИмя, 14) = "РегистрРасчета" Тогда
		Возврат "РегистрыРасчета";
	ИначеЕсли Лев(ПолноеИмя, 13) = "БизнесПроцесс" Тогда
		Возврат "БизнесПроцессы";
	ИначеЕсли Лев(ПолноеИмя, 6) =  "Задача" Тогда
		Возврат "Задачи";
	Иначе
		Возврат "";
	КонецЕсли;
	
КонецФункции

// Проверяет, что тип ссылочны
// 
// Параметры:
//  Тип - Тип
//  ПолучитьУИД - Булево - Проверяет что тип ссылочный, и для него можно получить УИД
// 
// Возвращаемое значение:
//  Булево
//
Функция ЭтоСсылка(Тип, ПолучитьУИД = Ложь) Экспорт
	
	Возврат Не ЭтоПростойТип(Тип)
		И (Справочники.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ Документы.ТипВсеСсылки().СодержитТип(Тип)
		Или Не ПолучитьУИД И Перечисления.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ ПланыВидовХарактеристик.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ ПланыСчетов.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ ПланыВидовРасчета.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ ПланыОбмена.ТипВсеСсылки().СодержитТип(Тип))
		ИЛИ БизнесПроцессы.ТипВсеСсылки().СодержитТип(Тип)
		ИЛИ Не ПолучитьУИД И БизнесПроцессы.ТипВсеСсылкиТочекМаршрутаБизнесПроцессов().СодержитТип(Тип)
		ИЛИ Задачи.ТипВсеСсылки().СодержитТип(Тип);
	
КонецФункции

// Помечает на удаление ссылку.
// 
// Параметры:
//  СсылкаНаОбъект - ЛюбаяСсылка
//  ЭлементОбъектовМетаданных - Неопределено, Структура - Элемент объектов метаданных:
//   * ПолноеИм - Строка
//   * Раздел -   Строка
//  ОбменДаннымиЗагрузка - Булево - Устанавливает жим Обмен данными - Загрузка.
//
Процедура ПометитьНаУдалениеСсылку(СсылкаНаОбъект, ЭлементОбъектовМетаданных, ОбменДаннымиЗагрузка = Ложь) Экспорт
	
	ОбъектДанных = СсылкаНаОбъект.ПолучитьОбъект();
	Если ОбменДаннымиЗагрузка Тогда
		ОбъектДанных.ОбменДанными.Загрузка = Истина;
	КонецЕсли;
	
	Если Не ОбъектДанных.ПометкаУдаления И ЭтоТаблицаПредопределенныхДанных(ЭлементОбъектовМетаданных.ПолноеИмя) Тогда
		ОбъектДанных.ИмяПредопределенныхДанных = "";
		Если ЭлементОбъектовМетаданных.Раздел = "ПланыСчетов" Тогда
			ОбъектДанных.ВидыСубконто.Очистить();
		КонецЕсли;
	ИначеЕсли ЭлементОбъектовМетаданных.Раздел = "ПланыОбмена" Тогда
		ОбъектДанных.ЭтотУзел = Ложь;
	КонецЕсли;
	
	ОбъектДанных.ПометкаУдаления = Не ОбъектДанных.ПометкаУдаления;
	ОбъектДанных.ОбменДанными.Загрузка = Истина;
	ОбъектДанных.Записать();
	
КонецПроцедуры

// Удаляет все помеченные на удаление объекты без контроля на ссылочную целостность.
// 
// Параметры:
//  УдаляемыеСсылки - Неопределено - Все помеченные на удаление.
//                  - Массив Из ЛюбаяСсылка - Удаляемые ссылки.
//                  - Строка - Полное имя объекта метаданных, по которому нужно запустить удаление.
//  КонтрольСсылочнойЦелостности - Булево
//  РежимОбменДанными - Булево
//
// Возвращаемое значение:
//  ТаблицаЗначений
//
Функция ЗапуститьУдалениеПомеченных(УдаляемыеСсылки = Неопределено, КонтрольСсылочнойЦелостности = Истина, РежимОбменДанными = Ложь) Экспорт
	
	НайденныеДанные = Новый ТаблицаЗначений;
	
	Если ТипЗнч(УдаляемыеСсылки) = Тип("Строка") Или УдаляемыеСсылки = Неопределено Тогда
		ВключитьОбъекты = Неопределено;
		Если ЗначениеЗаполнено(УдаляемыеСсылки) Тогда
			ВключитьОбъекты = Новый Массив;
			ВключитьОбъекты.Добавить(УдаляемыеСсылки);
		КонецЕсли;
		ПомеченныеНаУдаление = НайтиПомеченныеНаУдаление(, ВключитьОбъекты);
	Иначе
		ПомеченныеНаУдаление = УдаляемыеСсылки;
	КонецЕсли;
	
	Если КонтрольСсылочнойЦелостности И Не РежимОбменДанными Тогда
		ТекущийМонопольныйРежим = МонопольныйРежим();
		Если Не ТекущийМонопольныйРежим Тогда
			УстановитьМонопольныйРежим(Истина);
		КонецЕсли;
		Попытка
			УдалитьОбъекты(ПомеченныеНаУдаление, Истина, НайденныеДанные);
		Исключение
			ТекстОшибки = НСтр("ru = 'Не удалось провести удаление объектов:'") + Символы.ПС + ОписаниеОшибки();
			СообщитьПользователю(ТекстОшибки);
		КонецПопытки;
		Если Не ТекущийМонопольныйРежим Тогда
			УстановитьМонопольныйРежим(Ложь);
		КонецЕсли;
	Иначе
		Для Каждого СсылкаНаОбъект Из ПомеченныеНаУдаление Цикл
			УдалитьСсылкуВРежимеОбменДанными(СсылкаНаОбъект, КонтрольСсылочнойЦелостности);
		КонецЦикла;
	КонецЕсли;
	
	Возврат НайденныеДанные;
	
КонецФункции

