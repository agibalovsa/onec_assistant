// Удаляет ссылку в с контролем ссылочной целостности режиме обмен данными.
// 
// Параметры:
//  СсылкаНаОбъект - Массив Из ЛюбаяСсылка
//                 - ЛюбаяСсылка
//  КонтрольСсылочнойЦелостности - Булево
//
Процедура УдалитьСсылкуВРежимеОбменДанными(СсылкаНаОбъект, КонтрольСсылочнойЦелостности = Истина)
	
	Если ТипЗнч(СсылкаНаОбъект) = Тип("Массив") Тогда
		Ссылки = СсылкаНаОбъект;
	Иначе
		Ссылки = Новый Массив;
		Ссылки.Добавить(СсылкаНаОбъект);
	КонецЕсли;
	
	Если КонтрольСсылочнойЦелостности Тогда
		НайденныеСсылки = НайтиПоСсылкам(Ссылки);
	КонецЕсли;
	
	Для Каждого Ссылка Из Ссылки Цикл
		
		УдалитьОбъектДанных = Истина;
		
		Если КонтрольСсылочнойЦелостности Тогда
			Отбор = Новый Структура("Ссылка", Ссылка);
			СсылающиесяОбъекты = НайденныеСсылки.НайтиСтроки(Отбор);
			Для Каждого СсылающийсяОбъект Из СсылающиесяОбъекты Цикл
				Если СсылающийсяОбъект.Ссылка = СсылающийсяОбъект.Данные Тогда
					Продолжить;
				КонецЕсли;
				Если УдалитьОбъектДанных Тогда
					ШаблонСообщения = НСтр("ru = 'На элемент %1 ссылаются:'");
					ТекстСообщения = СтрШаблон(
						ШаблонСообщения,
						СокрЛП(СсылающийсяОбъект.Ссылка ));
					СообщитьПользователю(ТекстСообщения);
					УдалитьОбъектДанных = Ложь;
				КонецЕсли;
				СообщитьПользователю(Строка(СсылающийсяОбъект.Данные), СсылающийсяОбъект.Данные);
			КонецЦикла;
			
		КонецЕсли;
		
		Если Не УдалитьОбъектДанных Тогда
			Продолжить;
		КонецЕсли;
		
		Попытка
			ОбъектДанных = Ссылка.ПолучитьОбъект();
			ОбъектДанных.ОбменДанными.Загрузка = Истина;
			ОбъектДанных.Удалить();
		Исключение
			ТекстОшибки = ОписаниеОшибки();
			ШаблонСообщения = НСтр("ru = 'Ошибка удаления элемента объекта метаданных %1:
									|%2'");
			ТекстСообщения = СтрШаблон(
				ШаблонСообщения,
				ОбъектДанных.Метаданные().ПолноеИмя(),
				ТекстОшибки);
			СообщитьПользователю(ТекстСообщения);
		КонецПопытки;
		
	КонецЦикла;
	
КонецПроцедуры

