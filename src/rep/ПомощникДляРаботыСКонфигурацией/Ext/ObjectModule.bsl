				Отбор[ЭлементОтбора.Имя].Значение      = ЭлементОтбора.Значение;
				Отбор[ЭлементОтбора.Имя].ВидСравнения  = ВидСравнения.Равно;
				Отбор[ЭлементОтбора.Имя].Использование = Истина;
			КонецЦикла;
			ОбъектДанныхВБазе.Прочитать();
			Если ОбъектДанныхВБазе.Количество() = 0 Тогда
				Возврат Ложь;
			КонецЕсли;
		Исключение
			СтрокаОписанияОшибки = ОписаниеОшибки();
