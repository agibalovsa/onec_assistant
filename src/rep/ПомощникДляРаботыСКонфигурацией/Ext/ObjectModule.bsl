Функция ЗначениеJSONТипОбъекта(ЗначениеJSON)
	
	Возврат ТипЗнч(ЗначениеJSON) = Тип("Соответствие")
			И ЗначениеJSON.Количество() = 2
			И ЗначениеJSON.Получить("#type") <> Неопределено
			И ЗначениеJSON.Получить("#value") <> Неопределено;
	
КонецФункции

Процедура ЗаписатьЗначениеВJSON(ЗаписьJSON, ЗначениеJSON, СвойствоЗначения, ТипыXDTO, ЗаписыватьИмяСвойства = Истина)
	
	ПредопределенныеНаименования = ИнициализироватьПредопределенныеНаименованияЛатиница();
	
	Если ЗначениеJSON = Неопределено
		И (СвойствоЗначения.НижняяГраница = 0
		И Не СвойствоЗначения.Тип = ТипыXDTO.anyType
		ИЛИ ПредопределенныеНаименования.Получить(СвойствоЗначения.Имя) <> Неопределено) Тогда
		Возврат;
	КонецЕсли;
	
	Если ЗаписыватьИмяСвойства Тогда
		ЗаписьJSON.ЗаписатьИмяСвойства(СвойствоЗначения.Имя);
	КонецЕсли;
	
	Если ЗначениеJSONТипОбъекта(ЗначениеJSON) Тогда
		ЗаписьJSON.ЗаписатьНачалоОбъекта();
		ЗаписьJSON.ЗаписатьИмяСвойства("#type");
		ЗаписьJSON.ЗаписатьЗначение(ЗначениеJSON.Получить("#type"));
		ЗаписьJSON.ЗаписатьИмяСвойства("#value");
		ЗаписьJSON.ЗаписатьЗначение(ЗначениеJSON.Получить("#value"));
		ЗаписьJSON.ЗаписатьКонецОбъекта();
	ИначеЕсли ТипЗнч(ЗначениеJSON) = Тип("Соответствие") Тогда
		ЗаписатьСоответствиеВJSON(ЗаписьJSON, ЗначениеJSON, СвойствоЗначения, ТипыXDTO);
	ИначеЕсли ТипЗнч(ЗначениеJSON) = Тип("Массив") Тогда
		ЗаписатьМассивВJSON(ЗаписьJSON, ЗначениеJSON, СвойствоЗначения, ТипыXDTO);
	Иначе
		ЗаписьJSON.ЗаписатьЗначение(?(ЗначениеJSON = Null, Неопределено, ЗначениеJSON));
	КонецЕсли;
	
КонецПроцедуры

Процедура ЗаписатьСоответствиеВJSON(ЗаписьJSON, ЗначениеJSON, СвойствоЗначения, ТипыXDTO)
	
	СтруктураJSON = ПреобразоватьСоответствиеВСтруктуру(ЗначениеJSON);
	
	ОбъектXDTOСвойства = ФабрикаXDTO.Создать(СвойствоЗначения.Тип);
	ЗаписьJSON.ЗаписатьНачалоОбъекта();
	Для Каждого Свойство Из ОбъектXDTOСвойства.Свойства() Цикл
		Если Свойство.Тип = ТипыXDTO.FilterItem Тогда
			ОбъектXDTOFilterItem = ФабрикаXDTO.Создать(Свойство.Тип);
			Для Каждого СвойствоFilterItem Из ОбъектXDTOFilterItem.Свойства() Цикл
				ЗначениеСвойстваJSON = ПолучитьЗначениеСтруктурыJSON(СтруктураJSON, СвойствоFilterItem.Имя);
				ЗаписатьЗначениеВJSON(ЗаписьJSON, ЗначениеСвойстваJSON, СвойствоFilterItem, ТипыXDTO);
			КонецЦикла;
		Иначе
			ЗначениеСвойстваJSON = ПолучитьЗначениеСтруктурыJSON(СтруктураJSON, Свойство.Имя);
			ЗаписатьЗначениеВJSON(ЗаписьJSON, ЗначениеСвойстваJSON, Свойство, ТипыXDTO);
		КонецЕсли;
	КонецЦикла;
	ЗаписьJSON.ЗаписатьКонецОбъекта();
	
КонецПроцедуры

Процедура ЗаписатьМассивВJSON(ЗаписьJSON, ЗначениеJSON, СвойствоЗначения, ТипыXDTO)
	
	ЗаписьJSON.ЗаписатьНачалоМассива();
	Для Каждого ЗначениеСвойстваJSON Из ЗначениеJSON Цикл
		ЗаписатьЗначениеВJSON(ЗаписьJSON, ЗначениеСвойстваJSON, СвойствоЗначения, ТипыXDTO, Ложь);
	КонецЦикла;
	ЗаписьJSON.ЗаписатьКонецМассива();
	
КонецПроцедуры

Функция ПрочитатьОбъектИзЧтениеJSON(Сериализатор, ЧтениеJSON)
	
	ОбъектПочитан = Ложь;
	ОбъектДанных  = Неопределено;
	
	Пока Не ОбъектПочитан Цикл
		
		ЭтоГруппа = Ложь;
		
		Попытка
			
			ОбъектJSON = ПрочитатьJSON(ЧтениеJSON, Истина);
			
			Если ОбъектJSON = Неопределено Тогда
				Прервать;
			КонецЕсли;
			
			ТипОбъектаJSON = СтрЗаменить(ОбъектJSON.Получить("#type"), "jcfg:", "");
			ТипОбъектаXDTO = ФабрикаXDTO.Тип("http://v8.1c.ru/8.1/data/enterprise/current-config", ТипОбъектаJSON);
			
			Если ТипОбъектаXDTO = Неопределено Тогда
				ШаблонСообщения = НСтр("ru = 'Ошибка поиска метаданных %1 в информационной базе'");
				ТекстСообщения = СтрШаблон(ШаблонСообщения, ТипОбъектаJSON);
				СообщитьПользователю(ТекстСообщения);
				Продолжить;
			КонецЕсли;
			
			ТипыXDTO = Новый Структура;
			ТипыXDTO.Вставить("anyType",    ФабрикаXDTO.Тип("http://www.w3.org/2001/XMLSchema",   "anyType"));
			ТипыXDTO.Вставить("FilterItem", ФабрикаXDTO.Тип("http://v8.1c.ru/8.1/data/enterprise", "FilterItem"));
			
			ОбъектXDTO = ФабрикаXDTO.Создать(ТипОбъектаXDTO);
			
			ЗаписьОбъектаJSON = Новый ЗаписьJSON;
			ЗаписьОбъектаJSON.УстановитьСтроку();
			ЗаписьОбъектаJSON.ЗаписатьНачалоМассива();
			ЗаписьОбъектаJSON.ЗаписатьНачалоОбъекта();
			ЗаписьОбъектаJSON.ЗаписатьИмяСвойства("#type");
			ЗаписьОбъектаJSON.ЗаписатьЗначение(ОбъектJSON.Получить("#type"));
			ЗаписьОбъектаJSON.ЗаписатьИмяСвойства("#value");
			ЗаписьОбъектаJSON.ЗаписатьНачалоОбъекта();
			
			СтруктураJSON = ПреобразоватьСоответствиеВСтруктуру(ОбъектJSON.Получить("#value"));
			
			СвойстваXDTO = ПолучитьСвойстваОбъектаXDTO(ОбъектXDTO);
			
			Для Каждого СвойствоXDTO Из СвойстваXDTO Цикл
				
				ЗначениеJSON = ПолучитьЗначениеСтруктурыJSON(СтруктураJSON, СвойствоXDTO.Имя);
				Если ЗначениеJSON = Неопределено
					И (СвойствоXDTO.НижняяГраница = 0 И СвойствоXDTO.ВозможноПустое И ЭтоГруппа
						ИЛИ ТипЗнч(ОбъектXDTO[СвойствоXDTO.Имя]) = Тип("СписокXDTO")) Тогда
					Продолжить;
				КонецЕсли;
				
				Если СвойствоXDTO.Имя = "IsFolder" Тогда
					ЭтоГруппа = ЗначениеJSON;
				КонецЕсли;
				
				ЗаписатьЗначениеВJSON(ЗаписьОбъектаJSON, ЗначениеJSON, СвойствоXDTO, ТипыXDTO);
				
			КонецЦикла;
			
			ЗаписьОбъектаJSON.ЗаписатьКонецОбъекта();
			ЗаписьОбъектаJSON.ЗаписатьКонецОбъекта();
			ЗаписьОбъектаJSON.ЗаписатьКонецМассива();
			СтрокаJSON = ЗаписьОбъектаJSON.Закрыть();
			
			ЧтениеОбъектаJSON = Новый ЧтениеJSON();
			ЧтениеОбъектаJSON.УстановитьСтроку(СтрокаJSON);
			ЧтениеОбъектаJSON.Прочитать();
			
			ОбъектДанных  = Сериализатор.ПрочитатьJSON(ЧтениеОбъектаJSON);
			ОбъектПочитан = Истина;
			
		Исключение
			ОписаниеОшибки = ОписаниеОшибки();
			ИмяЭлемента = "";
			ШаблонСообщения = НСтр("ru = 'Ошибка чтения элемента %1 объекта метаданных %2 в информационной базе:
									|
									| %3'");
			ТекстСообщения = СтрШаблон(ШаблонСообщения, ТипОбъектаJSON, ИмяЭлемента, ОписаниеОшибки);
			СообщитьПользователю(ТекстСообщения);
		КонецПопытки;
		
	КонецЦикла;
	
	Возврат ОбъектДанных;
	
КонецФункции

// Свойства при записи должны идти в следующем порядке:
// - Стандартные реквизиты (по алфавиту).
// - Пользовательские реквизиты (по алфавиту).
// - Стандартные табличные части (по алфавиту).
// - Пользовательские табличные части (по алфавиту).
//
Функция ПолучитьСвойстваОбъектаXDTO(ОбъектXDTO)
	
	ПредопределенныеНаименования = ИнициализироватьПредопределенныеНаименованияЛатиница();
	
	Свойства = Новый ТаблицаЗначений;
	Свойства.Колонки.Добавить("Свойство");
	Свойства.Колонки.Добавить("Индекс",  Новый ОписаниеТипов("Число"));
	Свойства.Колонки.Добавить("Порядок", Новый ОписаниеТипов("Число"));
	
	Индекс = 0;
	Для Каждого Свойство Из ОбъектXDTO.Свойства() Цикл
		Стандартный = ПредопределенныеНаименования.Получить(Свойство.Имя) <> Неопределено;
		Таблица     = ТипЗнч(ОбъектXDTO[Свойство.Имя]) = Тип("СписокXDTO");
		НоваяСтрока = Свойства.Добавить();
		НоваяСтрока.Свойство = Свойство;
		НоваяСтрока.Индекс   = Индекс;
		Если Не Стандартный И Не Таблица Тогда
			НоваяСтрока.Порядок = 1;
		ИначеЕсли Стандартный И Таблица Тогда
			НоваяСтрока.Порядок = 2;
		ИначеЕсли Не Стандартный И Таблица Тогда
			НоваяСтрока.Порядок = 3;
		Иначе
			НоваяСтрока.Порядок = 0;
		КонецЕсли;
		Индекс = Индекс + 1;
	КонецЦикла;
	
	Свойства.Сортировать("Порядок Возр, Индекс Возр");
	
	Возврат Свойства.ВыгрузитьКолонку("Свойство");
	
КонецФункции

Функция ПрочитатьОбъектИзЧтениеXML(Сериализатор, ЧтениеXML)
	
	ОбъектПочитан = Ложь;
	ОбъектДанных  = Неопределено;
	
	Пока Не ОбъектПочитан Цикл
		
		ВозможностьЧтения = Сериализатор.ВозможностьЧтенияXML(ЧтениеXML);
		ИмяОбъектаМетаданных = ЧтениеXML.ЛокальноеИмя;
		
		Если Не ВозможностьЧтения Тогда
			
			Если ЧтениеXML.ТипУзла = ТипУзлаXML.КонецЭлемента Тогда
				Прервать;
			КонецЕсли;
			
			ШаблонСообщения = НСтр("ru = 'Ошибка разбора метаданных %1 в информационной базе'");
			ТекстСообщения = СтрШаблон(ШаблонСообщения, ИмяОбъектаМетаданных);
			СообщитьПользователю(ТекстСообщения);
			
			Если Не ПрочитатьXMLДоСледующегоОбъекта(ЧтениеXML) Тогда
				Прервать;
			КонецЕсли;
			
			Продолжить;
			
		КонецЕсли;
		
		Попытка
			ОбъектДанных  = Сериализатор.ПрочитатьXML(ЧтениеXML);
			ОбъектПочитан = Истина;
		Исключение
			ОписаниеОшибки = ОписаниеОшибки();
			ИмяЭлемента = ЧтениеXML.ЛокальноеИмя;
			ШаблонСообщения = НСтр("ru = 'Ошибка чтения элемента %1 объекта метаданных %2 в информационной базе:
									|
									| %3'");
			ТекстСообщения = СтрШаблон(ШаблонСообщения, ИмяОбъектаМетаданных, ИмяЭлемента, ОписаниеОшибки);
			СообщитьПользователю(ТекстСообщения);
		КонецПопытки;
		
		Если Не ОбъектПочитан Тогда
			Если Не ПрочитатьXMLДоСледующегоОбъекта(ЧтениеXML) Тогда
				Прервать;
			КонецЕсли;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ОбъектДанных;
	
КонецФункции

Функция ПрочитатьXMLДоСледующегоОбъекта(ЧтениеXML)
	
	ПрочитанСледующий = Истина;
	Если ЭтоНачалоЭлементаXMLОбъекта(ЧтениеXML) Тогда
		ЧтениеXML.Пропустить();
		Если Не ЧтениеXML.Прочитать() Тогда
			ПрочитанСледующий = Ложь;
		КонецЕсли;
	Иначе
		Пока НЕ ЭтоНачалоЭлементаXMLОбъекта(ЧтениеXML) Цикл
			Если Не ЧтениеXML.Прочитать() Тогда
				ПрочитанСледующий = Ложь;
				Прервать;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	Возврат ПрочитанСледующий;
	
КонецФункции

Функция ЭтоНачалоЭлементаXMLОбъекта(ЧтениеXML)
	
	Возврат (ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента
		И СтрПодобнаПоРегулярномуВыражению(ЧтениеXML.Имя, "v8:[A-Z,a-z]*[.].*"));
	
КонецФункции

Процедура ЗаписатьКлючиЗаписиПоТипуВТранспортДанных(ТранспортДанных, ЭлементОбъектовМетаданных)
	
	КлючиЗаписейПоТипу = ТранспортДанных.КлючиЗаписей.Получить(ЭлементОбъектовМетаданных.ПолноеИмя);
	Если КлючиЗаписейПоТипу = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ОписаниеОбъекта = КлючиЗаписейПоТипу.Получить("ОписаниеОбъекта");
	ПараметрыВыгрузки = ПреобразоватьСтрокуВПараметрыВыгрузки(ЭлементОбъектовМетаданных.ПараметрыВыгрузки);
	
	Для Каждого КлючЗаписи Из КлючиЗаписейПоТипу Цикл
		Если КлючЗаписи.Ключ = "ОписаниеОбъекта" Тогда
			Продолжить;
		КонецЕсли;
		ЗаписатьКлючЗаписиВТранспортДанных(ТранспортДанных, КлючЗаписи.Значение, ОписаниеОбъекта, ПараметрыВыгрузки.НеВыгружаемыеПоля);
	КонецЦикла;
	
КонецПроцедуры

Процедура ЗаписатьКлючЗаписиВТранспортДанных(ТранспортДанных, КлючЗаписи, ОписаниеОбъекта, НеВыгружаемыеПоля)
	
	Если ЭтоТаблицаНабораДанных(ОписаниеОбъекта.ПолноеИмя) Тогда
		Попытка
			НаборЗаписей = МенеджерОбъектаПоПолномуИмени(ОписаниеОбъекта.ПолноеИмя).СоздатьНаборЗаписей();
			Отбор        = НаборЗаписей.Отбор;
			Для Каждого КлючОтбора Из КлючЗаписи Цикл
				Отбор[КлючОтбора.Ключ].Значение      = КлючОтбора.Значение;
				Отбор[КлючОтбора.Ключ].ВидСравнения  = ВидСравнения.Равно;
				Отбор[КлючОтбора.Ключ].Использование = Истина;
			КонецЦикла;
			НаборЗаписей.Прочитать();
			Если ПроверитьСсылочнуюЦелостностьВыгружаемыхДанных(НаборЗаписей, ОписаниеОбъекта, НеВыгружаемыеПоля, ТранспортДанных.Тип = "ВыгрузкаПоСсылке") Тогда
				ЗаписатьДанныеВТранспортДанных(ТранспортДанных, НаборЗаписей);
			КонецЕсли;
		Исключение
			СтрокаОписанияОшибки = ОписаниеОшибки();
			ШаблонСообщения = НСтр("ru = 'При выгрузке регистра %1 возникла ошибка:
				|%3'");
			ТекстСообщения = СтрШаблон(ШаблонСообщения, ОписаниеОбъекта.ПолноеИмя, СтрокаОписанияОшибки);
			СообщитьПользователю(ТекстСообщения);
			ВызватьИсключение ТекстСообщения;
		КонецПопытки;
	ИначеЕсли ЭтоТаблицаСсылочныхДанных(ОписаниеОбъекта.ПолноеИмя) Тогда
		ОбъектДанных = КлючЗаписи.Ссылка.ПолучитьОбъект();
		Попытка
			//@skip-check query-in-loop
			Если ПроверитьСсылочнуюЦелостностьВыгружаемыхДанных(ОбъектДанных, ОписаниеОбъекта, НеВыгружаемыеПоля, ТранспортДанных.Тип = "ВыгрузкаПоСсылке") Тогда
				ЗаписатьДанныеВТранспортДанных(ТранспортДанных, ОбъектДанных);
				Если ЭтоТаблицаДокумент(ОписаниеОбъекта.ПолноеИмя) Тогда
					Для Каждого Движение Из ОбъектДанных.Движения Цикл
						Движение.Прочитать();
						ЗаписатьДанныеВТранспортДанных(ТранспортДанных, Движение);
					КонецЦикла;
				КонецЕсли;
			КонецЕсли;
		Исключение
			СтрокаОписанияОшибки = ОписаниеОшибки();
			ШаблонСообщения = НСтр("ru = 'При выгрузке объекта %1(%2) возникла ошибка:
				|%3'");
			СтрокаСообщения = СтрШаблон(ШаблонСообщения, ОбъектДанных, ТипЗнч(ОбъектДанных), СтрокаОписанияОшибки);
			СообщитьПользователю(СтрокаСообщения);
			ВызватьИсключение СтрокаСообщения;
		КонецПопытки;
	ИначеЕсли ЭтоКонстанта(ОписаниеОбъекта.ПолноеИмя) Тогда
		Попытка
