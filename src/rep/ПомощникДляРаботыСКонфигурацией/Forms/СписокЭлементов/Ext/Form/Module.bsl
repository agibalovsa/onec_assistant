	Иначе
		УникальныйИдентификаторСтроки = "";
	КонецЕсли;
	
	Если ОбъектОбработки.ЭтоСсылка(ТипЗнч(СсылкаЯчейки), Истина) Тогда
		УникальныйИдентификаторЯчейки = СсылкаЯчейки.УникальныйИдентификатор();
	Иначе
		УникальныйИдентификаторЯчейки = "";
	КонецЕсли;
	
