	ТекущиеДанные = Элементы.Список.ТекущиеДанные;
	
	Если ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ИмяТекущегоПоля = ОпределитьИмяТекущегоПоляНаСервере();
	
	НайтиСсылкиНаТекущийОбъект(ТекущиеДанные[ИмяТекущегоПоля]);
	
КонецПроцедуры

&НаКлиенте
Процедура ПометитьНаУдалениеОбъектПоКлючу()
	
	ТекущиеДанные = Элементы.Список.ТекущиеДанные;
	
	Если ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если СтрНайти(Элементы.Список.ТекущаяСтрока, "КлючЗаписи") = 0 Тогда
		ПометитьНаУдалениеСсылкуНаСервере();
	КонецЕсли;
	
	Элементы.Список.Обновить();
	
КонецПроцедуры

&НаКлиенте
Процедура УдалитьОбъектПоКлючу()
	
	ТекущиеДанные = Элементы.Список.ТекущиеДанные;
	
	Если ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если СтрНайти(Элементы.Список.ТекущаяСтрока, "КлючЗаписи") > 0 Тогда
		УдалитьЗаписьНаСервере();
	ИначеЕсли РежимОбмена Тогда
		УдалитьСсылкуНаСервереВРежимеОбменДанными();
	Иначе
		УдалитьСсылкуНаСервере();
	КонецЕсли;
	
	Элементы.Список.Обновить();
	
КонецПроцедуры

&НаКлиенте
Процедура СменитьРежимУдаленияОбъекта()
	
	Элементы.ФормаРежимОбмена.Пометка = Не Элементы.ФормаРежимОбмена.Пометка;
	РежимОбмена = Элементы.ФормаРежимОбмена.Пометка;
	
КонецПроцедуры

